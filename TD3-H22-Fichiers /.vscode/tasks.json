{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang++ générer le fichier actif",
            "command": "/usr/bin/clang++",
            "args": [
                "-std=c++17",
                "-stdlib=libc++",
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/*.cpp",
                "-o",
                "${workspaceFolder}/TD2-H22-Fichiers.out"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true 
                  },
            "detail": "Tâche générée par le débogueur."
        }
    ],
    "version": "2.0.0"
}